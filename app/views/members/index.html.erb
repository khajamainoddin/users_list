

<h1>Members</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= link_to member.name, member %></td>
        
        
        <td><%= link_to 'Edit', edit_member_path(member), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
<div class="col-lg-6">
<%= link_to 'New Member', new_member_path, class: 'btn btn-primary' %>
</div>
</div>


